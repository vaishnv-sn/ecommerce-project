<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/product/{{banners.banner1}}" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/product/{{banners.banner2}}" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/product/{{banners.banner3}}" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>

<div class='container mt-5'>
    <div class='row'>
        {{#each products}}

            <div class='col-md-4 mb-5'>
                <div class='card' style='width: 18rem;'>
                    <img
                        class='card-img-top'
                        src='/images/product/{{this.image1}}'
                        style='height:15rem'
                        alt='Card image cap'
                    />
                    <div class='card-body'>
                        <h5 class='card-title font-weight-bold'>{{this.pro_title}}</h5>
                        <p class='card-text font-weight-bold m-0'>Price:
                            <span class="font-weight-normal text-muted"><s>₹{{this.pro_price}}</s></span> <span class='text-success'>₹{{this.pro_offerPrice}}/-</span></p>
                        <p class='card-text text-muted'>{{this.pro_description}}</p>
                        <button class='btn btn-primary mr-4' onclick="addToCart('{{this._id}}')">Add to Cart</button>
                        <a href='/view-product/{{this._id}}' class='btn btn-warning'>View Item</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>

